<div class="container my-3" data-controller="login">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 bg-white shadow-sm p-4">
            <h2>Login</h2>
            <%= form_with url: login_path, method: :post, local: true do |f| %>
                <div>
                    <%= f.label :email, class: "form-label", for: 'email_field' %>
                    <%= f.email_field :email, id: 'email_field', required: true, value: flash[:email] || "", class: "form-control", placeholder: "Email", autocomplete: "email" %>
                </div>
                <div>
                    <%= f.label :password, class: "form-label mt-3", for: 'login_password' %>
                    <div class="password-container">
                        <%= f.password_field :password, required: true, id: "login_password", class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
                        <span class="toggle-password material-symbols-rounded" data-action="click->login#toggleLoginPasswordVisibility" data-login-target="login_password">visibility_off</span>
                    </div>
                </div>
                <%= f.submit "Login", class: "btn btn-primary mt-3" %>
            <% end %>
        </div>
    </div>
</div>
