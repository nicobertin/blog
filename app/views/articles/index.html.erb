<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <div id="<%= dom_id article %>">
      <p>
        <strong>Title:</strong>
        <%= article.title %>
      </p>
    </div>

    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>

<%= link_to "New article", new_article_path %>
