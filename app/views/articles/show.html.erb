<div id="<%= dom_id @article %>">
  <% if !@article.content.blank? %>
    <div class="d-md-flex justify-content-center">
      <div>
        <h1><%= @article.title %></h1>
        <div class="mt-5">
          <%= @article.content %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @current_user %>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Opciones
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "Editar este artículo", edit_article_path(@article), class: "dropdown-item" %></li>
      <li><%= link_to "Volver a los artículos", articles_path, class: "dropdown-item" %></li>
      <li><%= link_to "Eliminar este artículo", @article, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "dropdown-item" %></li>
    </ul>
  </div>
<% end %>